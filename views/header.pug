mixin menuItem (iconPath, text, link)

    li.menu__item: a.menu__link(href=`${link}`)
        img.menu__icon(src=`/img/ui/${iconPath}`, alt=`${text} icon`, class=`menu__icon--${text.toLowerCase().replace(' ', '')}`, role="menuitem")
        span.menu__text= text
