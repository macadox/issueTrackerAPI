extends ./../base.pug

append head
    link(rel="stylesheet", href="/css/spinner.css")

block content
    main.main.main--form
        .form
            h2.form__heading Log into your account
            form.form__body(is="signup-form")
                .form__group
                    input#name.form__input( required)
                    label.form__label(for="name"): span Full name
                .form__group
                    input#email.form__input(type="email", required)
                    label.form__label(for="email"): span Email address
                .form__group
                    input#password.form__input(type="password", required, minlength="8")
                    label.form__label(for="password"): span Password
                .form__group
                    input#confirmPassword.form__input(type="password", required, minlength="8")
                    label.form__label(for="confirmPassword"): span Password confirm
                .form__group
                    button.btn.btn--big.btn--dark.form__button Sign up
            .form__footer
                a(href="/login").form__link Already a member? Click here to login!
